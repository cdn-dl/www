{% extends "./__widget/default.njk" %}
{% block head %}{% endblock %}
{% block body %}
    <!-- Start Home Area -->
    <div class="home-area">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-6 col-md-12">
                            <div class="main-banner-content">
                                <h1>{$ $t.index.s1.title $}</h1>
                                {% for v in $t.index.s1.list %}
                                    <li>{$ loop.index $} {$ v $}</li>
                                {% endfor %}
                                <div class="banner-btn">
                                    <a href="javascript:void" id="download" class="default-btn-one download">
                                        {$ $t.btn.download $}
                                        <span></span>
                                    </a>
                                    <a class="default-btn install" id="install" href="javascript:void">
                                        {$ $t.btn.install $}
                                        <span></span>
                                    </a>
                                    <a class="red-btn" id="player" href="player.html" style="margin-left: 20px;">
                                        {$ $t.btn.play $}
                                        <span></span>
                                    </a>
                                    <!-- a class="default-btn blue-btn" href="../downloads/ivideos.firefox-360.zip"> Firefox/360 <span></span> </a -->
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12">
                            <div class="banner-image">
                                <img src="../assets/img/home-font.png" alt="image"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="creative-shape">
            <img src="../assets/img/home-bottom-shape.png" alt="svg shape"/>
        </div>
    </div>
    <!-- End Home Area -->
    <!-- Start Services Section -->
    <section class="services-section section-padding">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="section-title">
                        <h6>{$ $t.index.s2.title $}}</h6>
                        <h2>{$ $t.index.s2.stitle $}</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="single-services-item">
                        <div class="services-icon">
                            <i class="flaticon-project-management"></i>
                        </div>
                        <h3>{$ $t.index.s2.s11 $}</h3>
                        <p>
                            {$ $t.index.s2.s12 $}
                        </p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="single-services-item">
                        <div class="services-icon">
                            <i class="flaticon-programming"></i>
                        </div>
                        <h3>
                            {$ $t.index.s2.s21 $}
                        </h3>
                        <p>
                            {$ $t.index.s2.s22 $}
                        </p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="single-services-item">
                        <div class="services-icon">
                            <i class="flaticon-cpu-1"></i>
                        </div>
                        <h3>
                            {$ $t.index.s2.s31 $}
                        </h3>
                        <p>
                            {$ $t.index.s2.s32 $}
                        </p>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12">
                    <div class="single-services-item">
                        <div class="services-icon">
                            <i class="flaticon-cpu-1"></i>
                        </div>
                        <h3>
                            {$ $t.index.s2.s41 $}
                        </h3>
                        <code>{$ $t.index.s2.s42 $}</code>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Services Section -->
    <!-- Start Partner section -->
    <section class="partner-section pt-100 pb-70">
        <div class="container">
            <div class="partner-title">
                <h6></h6>
                <h2>{$ $t.index.s3.title $}</h2>
            </div>
            <div class="partner-list">
                <div class="partner-item">
                    <a href="https://www.appmovie.cc/?source=ivideos.one">
                        <img src="../assets/logos/appmovie.png" alt="appmovie"/>
                    </a>
                </div>
                <div class="partner-item">
                    <a href="https://www.4kvm.com/?source=ivideos.one">
                        <img src="../assets/logos/4kvm.png" alt="image"/>
                    </a>
                </div>
                <div class="partner-item">
                    <a href="https://www.o8tv.com/?source=ivideos.one">
                        <img src="../assets/logos/555dy.png" alt="image"/>
                    </a>
                </div>
                <div class="partner-item">
                    <a href="https://yanetflix.com/?source=ivideos.one">
                        <img src="../assets/logos/yanetflix.png" alt="image"/>
                    </a>
                </div>
                <div class="partner-item">
                    <a href="https://www.dyxiaoyu.com/?source=ivideos.one">
                        <img src="../assets/logos/dyxiaoyu.png" alt="image"/>
                    </a>
                </div>
            </div>
        </div>
    </section>
    <!-- End Partner section -->

{% endblock %}